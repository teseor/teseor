{# Components (grouped) #}
{% set components = docs | byType('component') %}
{% if components.length > 0 %}
<div class="ui-sidebar-nav__group">
  <span class="ui-sidebar-nav__group-label">Components</span>
  <ul class="ui-sidebar-nav__group-items">
    {% for group in componentGroups %}
      {% set groupDocs = components | byGroup(group.id) | sortByTitle %}
      {% if groupDocs.length > 0 %}
      <li><span class="ui-sidebar-nav__subgroup-label">{{ group.label }}</span></li>
      {% for doc in groupDocs %}
      <li><a class="ui-sidebar-nav__item ui-sidebar-nav__item--nested{% if page.url == doc.permalink %} ui-sidebar-nav__item--active{% endif %}" href="{{ doc.permalink }}"{% if page.url == doc.permalink %} aria-current="page"{% endif %}><span class="ui-sidebar-nav__label">{{ doc.title }}</span></a></li>
      {% endfor %}
      {% endif %}
    {% endfor %}
  </ul>
</div>
{% endif %}

