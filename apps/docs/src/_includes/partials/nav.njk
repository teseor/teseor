{# Home link #}
<div class="ui-sidebar-nav__group">
  <ul class="ui-sidebar-nav__group-items">
    <li><a class="ui-sidebar-nav__item{% if page.url == '/' %} ui-sidebar-nav__item--active{% endif %}" href="/"{% if page.url == '/' %} aria-current="page"{% endif %}><span class="ui-sidebar-nav__label">Home</span></a></li>
  </ul>
</div>

{# Tokens #}
{% set tokens = docs | byType('token') | sortByTitle %}
{% if tokens.length > 0 %}
<div class="ui-sidebar-nav__group">
  <span class="ui-sidebar-nav__group-label">Tokens</span>
  <ul class="ui-sidebar-nav__group-items">
    {% for doc in tokens %}
    <li><a class="ui-sidebar-nav__item{% if page.url == doc.permalink %} ui-sidebar-nav__item--active{% endif %}" href="{{ doc.permalink }}"{% if page.url == doc.permalink %} aria-current="page"{% endif %}><span class="ui-sidebar-nav__label">{{ doc.title }}</span></a></li>
    {% endfor %}
  </ul>
</div>
{% endif %}

