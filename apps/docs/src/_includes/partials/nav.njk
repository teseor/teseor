{# Home link #}
<a class="ui-nav-link{% if page.url == '/' %} ui-nav-link--active{% endif %}" href="/"{% if page.url == '/' %} aria-current="page"{% endif %}>Home</a>

{# Tokens #}
{% set tokens = docs | byType('token') | sortByTitle %}
{% if tokens.length > 0 %}
<h2 class="ui-nav-heading ui-mt-4">Tokens</h2>
{% for doc in tokens %}
<a class="ui-nav-link{% if page.url == doc.permalink %} ui-nav-link--active{% endif %}" href="{{ doc.permalink }}"{% if page.url == doc.permalink %} aria-current="page"{% endif %}>{{ doc.title }}</a>
{% endfor %}
{% endif %}

