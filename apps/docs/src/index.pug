//- Main content (included by index.html)
aside.ui-sidebar
  .ui-sidebar__header
    h1.ui-text-xl.ui-font-bold UI Lib
    p.ui-text-sm.ui-text-muted CSS-first components

  nav.ui-sidebar__nav.ui-stack.ui-stack--xs
    h2.ui-text-xs.ui-font-bold.ui-uppercase.ui-text-muted Tokens
    a.ui-nav-link(href="#grid") Grid System
    a.ui-nav-link(href="#spacing") Spacing
    a.ui-nav-link(href="#colors") Colors
    a.ui-nav-link(href="#typography") Typography
    a.ui-nav-link(href="#fonts") Fonts

    h2.ui-text-xs.ui-font-bold.ui-uppercase.ui-text-muted.ui-mt-4 Primitives
    a.ui-nav-link(href="#stack") Stack
    a.ui-nav-link(href="#cluster") Cluster
    a.ui-nav-link(href="#center") Center
    a.ui-nav-link(href="#grid-primitive") Grid
    a.ui-nav-link(href="#layout") Layout

    h2.ui-text-xs.ui-font-bold.ui-uppercase.ui-text-muted.ui-mt-4 Utilities
    a.ui-nav-link(href="#spacing-utils") Spacing
    a.ui-nav-link(href="#display-utils") Display
    a.ui-nav-link(href="#text-utils") Text

    h2.ui-text-xs.ui-font-bold.ui-uppercase.ui-text-muted.ui-mt-4 Components
    a.ui-nav-link(href="#button") Button

  .ui-sidebar__footer
    .ui-stack.ui-stack--xs
      button.ui-button.ui-button--sm.ui-button--secondary.ui-button--block(onclick="toggleDebug('ui-debug-grid')") Toggle Grid
      button.ui-button.ui-button--sm.ui-button--secondary.ui-button--block(onclick="toggleDebug('ui-debug-grid-rows')") Toggle Row Grid
      button.ui-button.ui-button--sm.ui-button--secondary.ui-button--block(onclick="toggleDebug('ui-debug-baseline')") Toggle Baseline
      button.ui-button.ui-button--sm.ui-button--secondary.ui-button--block(onclick="toggleDebug('ui-debug-outline')") Toggle Outlines

main.ui-main
  .ui-container
    header.ui-docs-header
      p Base unit:
        code --ui-unit: 0.5rem (8px)
        |  | Row:
        code --ui-row: 1rem (16px)

    //- TOKENS (from @ui-lib/tokens)
    include /packages/tokens/src/raw/grid.docs.pug
    include /packages/tokens/src/raw/spacing.docs.pug
    include /packages/tokens/src/raw/colors.docs.pug

    //- TYPOGRAPHY (from @ui-lib/css-core)
    include /packages/css-core/src/base/typography.docs.pug

    //- FONTS (from @ui-lib/fonts)
    include /packages/fonts/src/fonts.docs.pug

    //- PRIMITIVES (from @ui-lib/css-core)
    include /packages/css-core/src/primitives/stack.docs.pug
    include /packages/css-core/src/primitives/cluster.docs.pug
    include /packages/css-core/src/primitives/center.docs.pug
    include /packages/css-core/src/primitives/grid.docs.pug
    include /packages/css-core/src/primitives/app-shell.docs.pug

    //- UTILITIES (from @ui-lib/css-core)
    include /packages/css-core/src/utilities/spacing.docs.pug
    include /packages/css-core/src/utilities/display.docs.pug
    include /packages/css-core/src/utilities/text.docs.pug

    //- COMPONENTS (from @ui-lib/css-components)
    include /packages/css-components/src/atoms/button/button.docs.pug
