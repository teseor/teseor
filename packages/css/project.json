{
  "name": "css",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/css/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "inputs": ["{projectRoot}/src/**/*.scss", "{workspaceRoot}/postcss.config.js"],
      "options": {
        "commands": [
          "mkdir -p packages/css/dist",
          "sass packages/css/src/index.scss packages/css/dist/compiled.css --no-source-map",
          "postcss packages/css/dist/compiled.css -o packages/css/dist/index.css"
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "stylelint 'packages/css/src/**/*.scss'"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/test-results"],
      "options": {
        "commands": ["playwright test --config=packages/css/playwright.config.ts"]
      },
      "dependsOn": ["build"]
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sass --watch packages/css/src/index.scss:packages/css/dist/index.css"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf packages/css/dist"
      }
    }
  },
  "tags": ["type:css", "scope:library"]
}
