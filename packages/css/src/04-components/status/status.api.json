{
  "name": "status",
  "element": "div",
  "modifiers": {
    "variant": {
      "values": ["success", "warning", "danger", "info"]
    },
    "size": {
      "values": ["sm", "lg"]
    },
    "pulse": {
      "type": "boolean"
    }
  },
  "elements": {
    "dot": {}
  },
  "cssVars": [
    {
      "name": "--ui-status-size",
      "default": "calc(#{t.$unit} * 1"
    },
    {
      "name": "--ui-status-color",
      "default": "var(--ui-color-text-muted)"
    },
    {
      "name": "--ui-status-gap",
      "default": "calc(#{t.$unit} * 1"
    }
  ]
}
