{
  "name": "button",
  "baseClass": "button",
  "element": "button",
  "description": "Button heights align to grid rows.",
  "modifiers": {
    "size": {
      "values": ["sm", "lg"],
      "default": null,
      "description": "Size variant. Default (no modifier) is 32px / 2 rows."
    },
    "variant": {
      "values": ["secondary", "ghost", "danger"],
      "default": null,
      "description": "Visual style. Default (no modifier) is primary."
    },
    "block": {
      "type": "boolean",
      "description": "Full width button."
    },
    "icon": {
      "type": "boolean",
      "description": "Icon-only button with square dimensions."
    }
  },
  "states": ["hover", "focus", "active", "disabled"],
  "vars": {
    "base": {
      "height": "--row-2",
      "padding-x": "--space-2",
      "font-size": "--size-sm",
      "font-weight": "--weight-medium",
      "radius": "--radius-md",
      "bg": "--color-primary",
      "bg-hover": "--color-primary-dark",
      "text": "--color-text-inverse"
    },
    "size": {
      "sm": { "height": "calc(--row * 1.5)", "font-size": "--size-xs" },
      "lg": { "height": "calc(--row * 2.5)", "padding-x": "--space-3", "font-size": "--size-md" }
    },
    "variant": {
      "secondary": {
        "bg": "--color-bg-muted",
        "bg-hover": "--color-border-strong",
        "text": "--color-text"
      },
      "ghost": { "bg": "transparent", "bg-hover": "--color-bg-subtle", "text": "--color-primary" },
      "danger": { "bg": "--color-danger", "bg-hover": "--color-danger-dark" }
    }
  }
}
