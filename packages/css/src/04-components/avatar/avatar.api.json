{
  "name": "avatar",
  "element": "div",
  "modifiers": {
    "size": {
      "values": ["xs", "sm", "lg", "xl"]
    },
    "square": {
      "type": "boolean"
    }
  },
  "elements": {
    "fallback": {},
    "image": {}
  },
  "relatedComponents": ["avatar-group"],
  "cssVars": [
    {
      "name": "--ui-avatar-size",
      "default": "calc(#{t.$unit} * 5"
    },
    {
      "name": "--ui-avatar-bg",
      "default": "var(--ui-color-bg-subtle)"
    },
    {
      "name": "--ui-avatar-color",
      "default": "var(--ui-color-text-muted)"
    },
    {
      "name": "--ui-avatar-font-size",
      "default": "var(--ui-font-size-sm)"
    },
    {
      "name": "--ui-avatar-radius",
      "default": "50%"
    },
    {
      "name": "--ui-avatar-size-xs",
      "default": "calc(#{t.$unit} * 3"
    },
    {
      "name": "--ui-avatar-font-size-xs",
      "default": "var(--ui-font-size-xs)"
    },
    {
      "name": "--ui-avatar-size-sm",
      "default": "calc(#{t.$unit} * 4"
    },
    {
      "name": "--ui-avatar-font-size-sm",
      "default": "var(--ui-font-size-xs)"
    },
    {
      "name": "--ui-avatar-size-lg",
      "default": "calc(#{t.$unit} * 6"
    },
    {
      "name": "--ui-avatar-font-size-lg",
      "default": "var(--ui-font-size-md)"
    },
    {
      "name": "--ui-avatar-size-xl",
      "default": "calc(#{t.$unit} * 8"
    },
    {
      "name": "--ui-avatar-font-size-xl",
      "default": "var(--ui-font-size-lg)"
    },
    {
      "name": "--ui-avatar-radius-square",
      "default": "var(--ui-radius-md)"
    }
  ]
}
