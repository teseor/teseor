{
  "name": "menu",
  "baseClass": "menu",
  "element": "div",
  "description": "Dropdown list of actions or options",
  "elements": {
    "group": {
      "element": "ul",
      "description": "Group of menu items"
    },
    "label": {
      "element": "div",
      "description": "Group label/header"
    },
    "item": {
      "element": "button",
      "description": "Clickable menu item",
      "modifiers": {
        "variant": {
          "values": ["danger"],
          "default": null
        },
        "state": {
          "values": ["disabled", "check", "radio"],
          "default": null
        }
      }
    },
    "item-icon": {
      "element": "span",
      "description": "Icon within menu item"
    },
    "item-shortcut": {
      "element": "span",
      "description": "Keyboard shortcut text"
    },
    "item-indicator": {
      "element": "span",
      "description": "Check/radio indicator"
    },
    "separator": {
      "element": "div",
      "description": "Visual divider between items"
    }
  }
}
