{
  "id": "badge",
  "type": "component",
  "title": "Badge",
  "description": "Inline labels for status indicators, counts, and categories",
  "api": "./badge.api.json",
  "sections": [
    {
      "title": "Default",
      "examples": [
        {
          "html": "<span class=\"ui-badge\">Default</span>"
        }
      ]
    },
    {
      "title": "Variants",
      "examples": [
        {
          "items": [
            { "tag": "span", "class": "ui-badge", "text": "Default" },
            { "tag": "span", "class": "ui-badge ui-badge--primary", "text": "Primary" },
            { "tag": "span", "class": "ui-badge ui-badge--success", "text": "Success" },
            { "tag": "span", "class": "ui-badge ui-badge--warning", "text": "Warning" },
            { "tag": "span", "class": "ui-badge ui-badge--danger", "text": "Danger" }
          ],
          "layout": "cluster"
        }
      ]
    },
    {
      "title": "Sizes",
      "examples": [
        {
          "items": [
            { "tag": "span", "class": "ui-badge ui-badge--sm", "text": "Small" },
            { "tag": "span", "class": "ui-badge", "text": "Default" }
          ],
          "layout": "cluster"
        }
      ]
    },
    {
      "title": "Use Cases",
      "examples": [
        {
          "html": "<div class=\"ui-cluster\"><span>Notifications</span><span class=\"ui-badge ui-badge--primary\">5</span></div>"
        },
        {
          "html": "<div class=\"ui-cluster\"><span class=\"ui-badge ui-badge--success\">Published</span><span class=\"ui-badge ui-badge--warning\">Draft</span><span class=\"ui-badge ui-badge--danger\">Archived</span></div>"
        }
      ]
    }
  ],
  "customization": [
    {
      "token": "--ui-badge-height",
      "default": "calc(var(--ui-row) * 1.25)",
      "description": "Default height"
    },
    { "token": "--ui-badge-height-sm", "default": "var(--ui-row)", "description": "Small height" },
    {
      "token": "--ui-badge-padding-x",
      "default": "var(--ui-space-1)",
      "description": "Horizontal padding"
    },
    {
      "token": "--ui-badge-font-size",
      "default": "var(--ui-font-size-xs)",
      "description": "Font size"
    },
    {
      "token": "--ui-badge-font-weight",
      "default": "var(--ui-weight-medium)",
      "description": "Font weight"
    },
    {
      "token": "--ui-badge-radius",
      "default": "var(--ui-radius-full)",
      "description": "Border radius"
    },
    {
      "token": "--ui-badge-bg",
      "default": "var(--ui-color-bg-muted)",
      "description": "Background color"
    },
    { "token": "--ui-badge-text", "default": "var(--ui-color-text)", "description": "Text color" }
  ]
}
