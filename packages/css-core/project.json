{
  "name": "css-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/css-core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "commands": [
          "mkdir -p packages/css-core/dist",
          "sass packages/css-core/src/index.scss packages/css-core/dist/compiled.css --no-source-map",
          "postcss packages/css-core/dist/compiled.css -o packages/css-core/dist/index.css"
        ],
        "parallel": false
      },
      "dependsOn": ["^build"]
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sass --watch packages/css-core/src/index.scss:packages/css-core/dist/index.css"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf packages/css-core/dist"
      }
    }
  },
  "tags": ["type:css", "scope:core"]
}
