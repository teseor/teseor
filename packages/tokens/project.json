{
  "name": "tokens",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/tokens/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "commands": [
          "mkdir -p packages/tokens/dist",
          "sass packages/tokens/src/index.scss packages/tokens/dist/compiled.css --no-source-map",
          "postcss packages/tokens/dist/compiled.css -o packages/tokens/dist/index.css"
        ],
        "parallel": false
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "sass --watch packages/tokens/src/index.scss:packages/tokens/dist/index.css"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf packages/tokens/dist"
      }
    }
  },
  "tags": ["type:tokens", "scope:design-system"]
}
