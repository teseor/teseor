{
  "name": "@ui-lib/source",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "description": "CSS-first UI library with grid rhythm system",
  "license": "MIT",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "new:component": "hygen component new --name",
    "sync:components": "node scripts/sync-component-index.js",
    "dev": "nx run-many -t dev",
    "build": "nx run-many -t build",
    "build:affected": "nx affected -t build",
    "test": "nx run-many -t test",
    "test:affected": "nx affected -t test",
    "test:e2e": "nx run docs:test-storybook",
    "lint": "biome check . && stylelint \"**/*.scss\" && node scripts/lint-components.js",
    "lint:components": "node scripts/lint-components.js",
    "lint:fix": "biome check --write . && stylelint \"**/*.scss\" --fix",
    "lint:scss": "stylelint \"**/*.scss\"",
    "lint:scss:fix": "stylelint \"**/*.scss\" --fix",
    "format": "biome format --write .",
    "typecheck": "nx run-many -t typecheck",
    "storybook": "nx run docs:storybook",
    "storybook:build": "nx run docs:build-storybook",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "prepare": "husky",
    "clean": "nx reset && pnpm -r exec rm -rf dist node_modules",
    "graph": "nx graph"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@nx/js": "^20.2.3",
    "@nx/playwright": "^20.2.3",
    "@nx/storybook": "^20.2.3",
    "@nx/vite": "^20.2.3",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/html": "^8.4.7",
    "@storybook/html-vite": "^8.4.7",
    "@storybook/test-runner": "^0.21.0",
    "@vituum/vite-plugin-pug": "^1.1.0",
    "husky": "^9.1.7",
    "hygen": "^6.2.11",
    "lint-staged": "^15.2.11",
    "lost-pixel": "^3.22.0",
    "nx": "^20.2.3",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-prefix-selector": "^2.1.1",
    "pug": "^3.0.3",
    "sass": "^1.94.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-scss": "^6.13.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vitest": "^2.1.8",
    "vituum": "^1.2.0"
  }
}
